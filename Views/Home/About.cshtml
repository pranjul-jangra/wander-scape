@{
    ViewData["Title"] = "About Us";
}

<section class="about container py-5">
  <div class="row align-items-center">
    <div class="col-md-6 mb-4 mb-md-0">
      <img src="~/images/about.png" class="img-fluid rounded shadow-lg" alt="About WanderScape">
    </div>
    <div class="col-md-6">
      <h2 class="fw-bold text-warning mb-3">About WanderScape</h2>
      <p>
        WanderScape isn’t just another travel page — it’s a curated window to the world. 
        We bring together breathtaking destinations, immersive experiences, and well-designed travel plans 
        for those who crave authentic adventures.
      </p>
      <p>
        From tropical escapes to mountain treks, our goal is to make travel seamless and inspiring. 
        Our team of explorers and designers handpick the best destinations and craft travel ideas 
        that help you go beyond the typical tourist experience.
      </p>
      <blockquote class="blockquote ps-3 border-start border-3 border-warning mt-3">
        <p class="mb-0 fst-italic">“The world is a book, and those who do not travel read only one page.”</p>
        <footer class="blockquote-footer mt-1">Saint Augustine</footer>
      </blockquote>
    </div>
  </div>
</section>

<section class="bg-light py-5">
  <div class="container text-center">
    <h3 class="fw-bold text-warning mb-4">Why Choose WanderScape?</h3>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="p-4 bg-white shadow-sm rounded h-100">
          <i class="bi bi-globe-americas fs-1 text-warning mb-3"></i>
          <h5>Global Reach</h5>
          <p class="small text-muted">We feature destinations from every corner of the globe — curated by experienced travelers.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 bg-white shadow-sm rounded h-100">
          <i class="bi bi-suit-heart-fill fs-1 text-warning mb-3"></i>
          <h5>Personal Touch</h5>
          <p class="small text-muted">Every itinerary is designed to inspire — not just list places. Real stories, real adventures.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 bg-white shadow-sm rounded h-100">
          <i class="bi bi-camera-reels fs-1 text-warning mb-3"></i>
          <h5>Visual Experience</h5>
          <p class="small text-muted">We focus on stunning imagery and storytelling that make you feel the destination before you go.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <h3 class="fw-bold text-warning text-center mb-4">Meet Our Team</h3>
    <div class="row g-4 justify-content-center">
      <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm text-center">
          <img src="~/images/team1.png" class="card-img-top rounded-circle p-3" alt="Founder">
          <div class="card-body">
            <h6 class="fw-bold mb-1">Aarav Mehta</h6>
            <small class="text-muted d-block mb-2">Founder & Explorer</small>
            <p class="small text-muted">A travel enthusiast who’s been to 40+ countries discovering hidden gems and stories worth telling.</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="card border-0 shadow-sm text-center">
          <img src="~/images/team2.png" class="card-img-top rounded-circle p-3" alt="Creative Director">
          <div class="card-body">
            <h6 class="fw-bold mb-1">Riya Kapoor</h6>
            <small class="text-muted d-block mb-2">Creative Director</small>
            <p class="small text-muted">Designs travel stories through visuals that inspire wanderlust and emotion.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
